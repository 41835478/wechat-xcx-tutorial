page {
    background: #f7f7f7;
    font-size: 36rpx;
    font-family: -apple-system,PingFang SC,Helvetica Neue,Microsoft Yahei,Simsun;
}
.under-line {
    position: relative;
}
.under-line:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    border-bottom: 1px solid #e0e0e2;
    width: 100%;
    transform: scaleY(0.5);
}
.top-line:after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    border-bottom: 1px solid #d8d8d8;
    width: 100%;
    transform: scaleY(0.5);
}

.btn-inline {
    display: inline;
    line-height: 56rpx;
    color: #333;
}
.clearBtnDefault {
    margin: 0;
    padding: 0;
    background: #fff;
    border: 0;
    border-radius: 0;
}
.clearBtnDefault:after {
    content: '';
    border: none;
    border-radius: 0;
    width: 0;
    height: 0;
}


